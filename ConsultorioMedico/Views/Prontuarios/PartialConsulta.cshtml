@model ConsultorioMedico.Models.Consulta

<div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Detalhes da Consulta</h5>
            <div class="form-group row">
                <div class="col-md-4">
                    @Html.Label("Paciente", htmlAttributes: new { @class = "font-weight-bold control-label col-md-12" })
                    @Html.EditorFor(model => model.Paciente.Nome, new { htmlAttributes = new { @class = "form-control col-md-12", @readonly = true } })
                </div>
                <div class="col-md-4">
                    @Html.Label("Médico", htmlAttributes: new { @class = "font-weight-bold control-label col-md-12" })
                    @Html.EditorFor(model => model.Medico.Nome, new { htmlAttributes = new { @class = "form-control col-md-12", @readonly = true } })
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.dataConsulta, "Data da Consulta", htmlAttributes: new { @class = "font-weight-bold control-label col-md-12" })
                    @{
                        var data = new DateTime();
                        if (Model != null)
                        {
                            data = (Model.dataConsulta.Date + Model.horarioConsulta.TimeOfDay);
                        }
                    }
                    @Html.TextBox("data", data.ToString(), htmlAttributes: new { @class = "form-control col-md-12", @readonly = true })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    @Html.Label("Especialidade", htmlAttributes: new { @class = "font-weight-bold control-label col-md-12" })
                    @Html.EditorFor(model => model.Especialidade.Nome, new { htmlAttributes = new { @class = "form-control col-md-12", @readonly = true } })
                </div>
                <div class="col-md-4">
                    @Html.Label("Convenio", htmlAttributes: new { @class = "font-weight-bold control-label col-md-12" })
                    @Html.EditorFor(model => model.Convenio.Nome, new { htmlAttributes = new { @class = "form-control col-md-12", @readonly = true } })
                </div>
            </div>
        </div>
    </div>
</div>
